# ====================================
# CONFIGURACIÓN DE LA BASE DE DATOS
# ====================================
MONGODB_URI=mongodb://localhost:27017/pizzeria_mamma_mia
DB_NAME=pizzeria_mamma_mia

# ====================================
# CONFIGURACIÓN DEL SERVIDOR
# ====================================
PORT=5000
NODE_ENV=development

# ====================================
# AUTENTICACIÓN Y SEGURIDAD
# ====================================
# Genera una clave secreta fuerte: openssl rand -base64 32
JWT_SECRET=tu_clave_secreta_muy_segura_cambiala_en_produccion_123456789
JWT_EXPIRE=7d

# Salt rounds para bcrypt (10-12 recomendado)
BCRYPT_ROUNDS=10

# ====================================
# CORS (Frontend URL)
# ====================================
FRONTEND_URL=http://localhost:5173

# ====================================
# CONFIGURACIÓN DE ADMIN INICIAL
# ====================================
ADMIN_EMAIL=admin@mammamia.com
ADMIN_PASSWORD=Admin123!Change
ADMIN_NAME=Administrador
